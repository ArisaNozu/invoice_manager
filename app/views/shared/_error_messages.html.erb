<% if model && model.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(model.errors.count, "error") %>
      prohibited this <%= model.model_name.human.downcase %> from being saved:
    </h2>
    <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>